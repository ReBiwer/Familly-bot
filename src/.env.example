# ============================================================
# Основные настройки приложения (AppSettings)
# ============================================================
# Уровень логирования: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEl=INFO
# Хост и порт, на которых будет запущено приложение
HOST=localhost
PORT=8000
# Режим отладки (True — расширенный вывод ошибок)
DEBUG=False

# ============================================================
# Аутентификация и авторизация (AuthSettings)
# Префикс: AUTH__
# ============================================================
# Секретный ключ для генерации/проверки JWT-токенов
AUTH__JWT_TOKEN=your-secret-jwt-key
# Алгоритм подписи JWT (по умолчанию HS256)
AUTH__JWT_ALG=HS256

# ============================================================
# База данных PostgreSQL (DBSettings)
# Префикс: DB__
# Формат URL: postgresql+asyncpg://USER:PASS@HOST:5432/NAME
# ============================================================
DB__USER=postgres
DB__PASS=postgres
DB__HOST=localhost
DB__NAME=familly_bot

# ============================================================
# Redis (RedisSettings)
# Префикс: REDIS__
# Формат URL: redis://HOST:PORT/CHECKPOINT_NUM_DB
# ============================================================
REDIS__HOST=localhost
REDIS__PORT=6379
# Номер базы Redis для хранения чекпоинтов
REDIS__CHECKPOINT_NUM_DB=0
# Время жизни чекпоинтов в минутах (по умолчанию 60)
REDIS__CHECKPOINT_TTL=60

# ============================================================
# Настройки LLM (LLMSettings)
# Префикс: LLM__
# ============================================================
# API-ключ для доступа к LLM-провайдеру (обязательно)
LLM__API_KEY=sk-your-api-key
# URL провайдера (по умолчанию OpenRouter)
LLM__BASE_URL=https://openrouter.ai/api/v1
# Модель OpenAI (опционально, если используете OpenAI-совместимый API)
LLM__OPENAI_MODEL=
# Модель Ollama (опционально, если используете локальный Ollama)
LLM__OLLAMA_MODEL=
# Температура генерации: 0.0 — детерминированно, 1.0 — креативно
LLM__TEMPERATURE=0.7

# ============================================================
# Фронтенд / Telegram-бот (FrontSettings)
# Префикс: FRONT__
# ============================================================
# Username бота без символа @ (например: familly_bot)
FRONT__BOT_USERNAME=your_bot_username
# Токен бота, полученный от @BotFather
FRONT__BOT_TOKEN=123456789:ABCDefGHIjklMNOpqrsTUVwxyz

# ============================================================
# Система промптов (PromptSettings)
# Префикс: PROMPT__
# Все поля имеют значения по умолчанию — секция необязательна
# ============================================================
# Статус промптов: dev (разработка) | prod (продакшен)
PROMPT__STATUS=dev
# Версия набора промптов
PROMPT__VERSION=1.0
# Имя YAML-файла с промптами (лежит в src/)
PROMPT__FILE_NAME=prompts.yaml

# ============================================================
# Основные настройки бота (BotSettings)
# ============================================================
# Токен бота, полученный от @BotFather
BOT_TOKEN=123456789:ABCDefGHIjklMNOpqrsTUVwxyz
# Режим отладки (True — расширенный вывод ошибок)
DEBUG=True

# ============================================================
# Redis (RedisSettings)
# Префикс: REDIS__
# Формат URL: redis://HOST:PORT/NUM_DB
# ============================================================
REDIS__HOST=localhost
REDIS__PORT=6379
# Номер базы Redis
REDIS__NUM_DB=0

# ============================================================
# Бэкенд-сервер (BackendSettings)
# Префикс: BACKEND__
# Формат URL: http://HOST:PORT
# ============================================================
# Хост бэкенд-сервера (по умолчанию 0.0.0.0)
BACKEND__HOST=0.0.0.0
# Порт бэкенд-сервера (по умолчанию 8000)
BACKEND__PORT=8000
